{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Django Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/octofit-tracker/backend/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/octofit-tracker/backend",
      "python": "${workspaceFolder}/octofit-tracker/backend/venv/bin/python",
      "env": {
        "DJANGO_SETTINGS_MODULE": "octofit_tracker.settings",
        "PYTHONPATH": "${workspaceFolder}/octofit-tracker/backend",
        "VIRTUAL_ENV": "${workspaceFolder}/octofit-tracker/backend/venv",
        "PATH": "${workspaceFolder}/octofit-tracker/backend/venv/bin:${env:PATH}"
      }
    },
    {
      "name": "Run React (frontend)",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "cwd": "${workspaceFolder}/octofit-tracker/frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "presentation": { "reveal": "always" },
      "env": {
        "CODESPACE_NAME": "${env:CODESPACE_NAME}"
      }
    },
    {
      "name": "Open Browser (Vite)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/octofit-tracker/frontend/src",
      "runtimeArgs": ["--remote-debugging-port=9222"]
    }
  ]
}